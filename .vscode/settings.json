{
  "rust-analyzer.linkedProjects": [
    "./Cargo.toml"
  ],
  "rust-analyzer.cargo.features": "all",
  "editor.formatOnSave": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "files.watcherExclude": {
    "**/target/**": true,
    "**/dist/**": true,
    "**/pkg/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/target": true,
    "**/dist": true,
    "**/pkg": true
  },
  "search.exclude": {
    "**/target": true,
    "**/dist": true,
    "**/pkg": true,
    "**/Cargo.lock": true
  }
}

